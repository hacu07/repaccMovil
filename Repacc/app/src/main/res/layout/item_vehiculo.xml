<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_8"
    android:layout_margin="@dimen/dimen_8"
    android:padding="@dimen/dimen_4">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/itmVeh_foto"
            android:layout_width="@dimen/dimen_128"
            android:layout_height="@dimen/dimen_128"
            android:padding="@dimen/dimen_8"
            android:src="@android:drawable/ic_menu_camera"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/itmVeh_placa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/placa"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_18"
            android:textStyle="bold"
            android:layout_margin="@dimen/dimen_8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/itmVeh_foto"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/itmVeh_marca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/marca"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_16"
            android:layout_margin="@dimen/dimen_8"
            app:layout_constraintTop_toBottomOf="@id/itmVeh_placa"
            app:layout_constraintStart_toEndOf="@id/itmVeh_foto"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/itmVeh_modelo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/modelo"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_16"
            android:layout_margin="@dimen/dimen_8"
            app:layout_constraintTop_toBottomOf="@id/itmVeh_marca"
            app:layout_constraintStart_toEndOf="@id/itmVeh_foto"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>